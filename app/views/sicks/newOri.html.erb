        <!-- MODAL -->
        <div id="addModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3 id="myModalLabel">Create a new member</h3>
          </div>
          <div class="modal-body">
            <form>
              <fieldset>
                <div class="row-fluid">
                    <div class="span6">
                      <label>Age*</label>
                      <input class="span12" id="age" type="text" placeholder="Type something...">
                    </div>
                    <div class="span6">
                      <label>Surname*</label>
                      <input id="surname" type="text" class="span12" placeholder="Type something...">
                    </div> 
                </div>
                <div class="row-fluid">
                  <div class="span6">
                    <label>Name*</label>
                    <input class="span12" id="name" type="text" placeholder="Type something...">
                  </div>
                  <div class="span6">
                    <label>Membership</label>
                    <div class="btn-group span12" data-toggle="buttons-radio">
                      <a id="approved-memb" class="memb-button btn btn-info active span6">Approved</a>
                      <a class="memb-button btn btn-info span6">Rejected</a>
                    </div> 
                  </div>
                </div>
                    
              </fieldset>
            </form>
          </div>
          <div class="modal-footer">
            <a class="btn" data-dismiss="modal" aria-hidden="true">Close</a>
            <a id="save" href="#" class="btn btn-primary">Save changes</a>
          </div>
        </div>
        
      </div>

      <script type="text/javascript">
    /* Algo de funcionalidad basica... */
      $(document).ready(function(){
        $("input").tooltip({ "title" : "Required" });
      });

      $("#approve").click(function(){
        $(".info").removeClass("error").addClass("success");
        $(".info > .status").html("Approved");          
      });

      $("#reject").click(function(){
        $(".info").removeClass("success").addClass("error");
        $(".info > .status").html("Rejected");
      });

      $("#select-all").click(function(){
        $("tbody > tr").addClass("info");
      });

      $("#unselect-all").click(function(){
        $("tbody > tr").removeClass("info");
      });

      $("#save").click(function(){
          save();
      });

      $("#delete").click(function(){
        $(".info").remove();
      });

      $("#delete-all").click(function(){
        $("tbody").empty();
      });

      function toggleSelected(tr) {
        $(tr).toggleClass("info");          
      }

      function resetForm() {
        $("#age").val("");
        $("#name").val("");
        $("#surname").val("");
        $(".memb-button").removeClass("active");
        $("#approved-memb").addClass("active");
      }

      function save() {
        var approved = $("#approved-memb").hasClass("active");
        var colourClass = approved ? "success" : "error"
        var status = approved ? "Approved" : "Rejected"
        var row = "<tr class='"+ colourClass +"'' onclick='toggleSelected(this)'><td>"+ $("#age").val() +"</td><td>"+ $("#name").val() +"</td><td>"+ $("#surname").val() +"</td><td class='status'>"+ status +"</td></tr>";
        $("tbody").append(row);
        resetForm();
        $("#addModal").modal("hide");          
      }

    </script>