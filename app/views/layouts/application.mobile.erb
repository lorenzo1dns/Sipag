<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"  
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">  
<html>  
  <head>  
    <title><%= h(yield(:title) || "Untitled") %></title>  
    <%= stylesheet_link_tag "/jqtouch/themes/css/jqtouch.css", "/jqtouch/themes/css/apple.css" %>
    <%= javascript_include_tag "applicationMobile" %>  
    <%= javascript_include_tag "/jqtouch/src/lib/zepto.min.js", "/jqtouch/src/jqtouch.min.js" %>  
    <script type="text/javascript">
    $.jQTouch({});
    </script>
    <%= yield(:head) %>  
  </head>  
  <body>  
    <% if mobile_device? %>  
    <%= link_to "Full Site", :mobile => 0 %>  
  <% else %>  
    <%= link_to "Mobile Site", :mobile => 1 %>  
  <% end %> 
  
    <div class="current">  
      
      <div class="toolbar">  
        <%= link_to "Back", nil, :class => "back" unless current_page? root_path %>  
        <h1><%=h yield(:title) %></h1>  
        <%= yield(:toolbar) %>  
      </div>  
       
  
      <% unless flash.empty? %>  
        <div class="info">  
        <%- flash.each do |name, msg| -%>  
          <%= content_tag :div, msg, :id => "flash_#{name}" %>  
        <%- end -%>  
        </div>  
      <% end %>  
  
      <%= yield %>  
    </div>  
  </body>  
</html> 