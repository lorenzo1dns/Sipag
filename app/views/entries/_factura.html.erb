<% @entry.invoices.each do |facturas| %>
          <%= fields_for "invoices[]", facturas do |factura| %>
              <div class="row-fluid well formula">

                  <div class="span6">
                            <!-- Aqui va el distribuidor -->
                            <label>Distribuidor</label>
                            <%=factura.collection_select :distributor_id, Distributor.all,:id,:nombre %>
                            
                  </div> 
                  <div class="span3">
                            
                            <label>Fecha</label>
                            <div class="input-append date" id="dp5" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
                                <%= factura.text_field :fecha, value: Time.now.strftime("%m/%d/%Y"),  readonly: "true", size: "16", class: "span6"  %>
                      
                                <span class="add-on"><i class="icon-calendar"></i></span>
                            </div>
                            
                            
                  </div> 
                  <div class="span3">
                            
                            <label>Fecha  Vencimiento</label>
                            <div class="input-append date" id="dp4" data-date="12-02-2012" data-date-format="dd-mm-yyyy">
                                <%= factura.text_field :fechaVencimiento, value: Time.now.strftime("%m/%d/%Y"),  readonly: "true", size: "16", class: "span6"  %>
                      
                                <span class="add-on"><i class="icon-calendar"></i></span>
                            </div>
                            
                            
                  </div> 
              </div> 
              <div class="row-fluid">


                <table class="table table-hover table-bordered" id="tblProducts">
                          <thead>
                              <tr>
                              
                              <th width="60">CÃ³digo</th>
                              <th width="200">Descripcion</th>                                  
                              <th width="60">Cantidad</th>
                              <th colspan="2" >Unidad</th>                                   
                              <th width="40">Moneda</th>
                              <th class='hide'>Valor Local</th>
                              <th width="80">Valor Local</th>
                              <th width="80">P.U</th>
                              <th width="100">Total</th>                               
                               <th >Total Lempira</th> 
                              </tr>
                                                
                          </thead >
                          <tbody>
                          </tbody>
                          <tfoot>

                            <tr>
                              <td colspan="2" class="tdAlineado">Total</td>
                              <td class="tdAlineado" id="totalCantidad"></td>
                              <td colspan="2"></td>                              
                              <td></td>                              
                              <td class="hide"></td>
                              <td class="tdAlineado"></td>
                              <td class="tdAlineado"></td>
                              <td class="tdAlineado"><%= factura.text_field :total,  readonly: "true" %></td>
                              <td class="tdAlineado"><%= factura.text_field :totalLempiras,  readonly: "true" %></td>
                            </tr>
                          </tfoot>
                </table>

                <div class="btn-group span4">
                <a id="btnAddProduct" class="btn btn-primary" role="button" >Nuevo</a>
                
                <a class="btn btn-primary  dropdown-toggle" data-toggle="dropdown" >Eliminar 
                  <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                              <li><a id="deleteProduct">Eliminar seleccionada</a></li>
                              <li><a id="delete-allProducto">Eliminar Todas</a></li>
                            </ul>
                            
            </div>
    
              </div>
        <% end %>
    <% end %>

