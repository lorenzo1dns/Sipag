<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>

<table class="table table-striped table-bordered table-condensed sortable">
  <thead>
  <tr>    
    <th style="width: 300px;"><%= sortable "nombre", "Nombre"%></th>
    <th>Descripcion</th>
     <th style="width: 40px;"></th>
   
  </tr>
</thead>
 <tbody>
<% @elements.each do |element| %>
  <tr>
    <td><%= link_to element.nombre, edit_element_path(element), :remote => true %></td>
    <td><%= element.descripcion.first(50) +"..." %></td>  
    <td valign="top"> 
                <%= link_to edit_element_path(element), :remote => true, :style=>'height: 14px;', :title=>'Edit' do%> 
                    <i class="icon-edit"></i> 
                <% end %> 
                
                <a style="height: 14px; padding-left: 5px;" title="Delete"
                    data-backdrop="static" data-keyboard="true"
                    href="javascript:;"
                    onclick="show_confirm_modal('<%= element_path(element) %>',
                    'Est√° seguro que desea Eleminar el elemento : <%= element.nombre%>');"> 
                    <i class="icon-remove"></i> 
                </a>
          </td>    
  </tr>
<% end %>
</tbody>
<tfoot>
        <tr>
            <td colspan="5"> <%= will_paginate @elements%> </td>
        </tr>
    </tfoot>
</table>